<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="@drawable/theme_bk_1"
    tools:context="org.sristi.sristi.ContributorProfileActivity">

    <View
        android:background="#000"
        android:alpha="0.6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/profile_viewer_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_marginLeft="-15dp"
                android:id="@+id/left_arrow_panel"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentLeft="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/opacity_bg_state"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_chevron_left_white_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginRight="-15dp"
                android:id="@+id/right_arrow_panel"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentRight="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/opacity_bg_state"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_chevron_right_white_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>


















