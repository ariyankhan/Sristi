<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="@drawable/theme_bk_1"
    tools:context="org.sristi.sristi.ContributorsActivity">

    <View
        android:alpha="0.5"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#55000000">

                <ImageView
                    android:id="@+id/back_imageeview"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_arrow_back_white_48dp"
                    android:layout_width="26dp"
                    android:layout_height="26dp" />

                <TextView
                    android:visibility="gone"
                    android:textColor="@color/PARAGRAPH_COLOR"
                    android:textSize="@dimen/HEADINGS_FONT_SIZE"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="Sign In/Sign Up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:background="#55000000"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/image_logo"
                        android:background="@drawable/round_theme"
                        android:layout_marginBottom="5dp"
                        android:padding="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_group_work_white_24dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textAllCaps="true"
                            android:id="@+id/sristi_title"
                            android:textSize="@dimen/HEADINGS_FONT_SIZE"
                            android:padding="0dp"
                            android:textColor="@color/PARAGRAPH_COLOR"
                            android:gravity="center"
                            android:text="Sristi Contributors 2K16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.4">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/h1"
                            android:fontFamily="sans-serif-condensed"
                            android:textStyle="bold"
                            android:layout_marginBottom="2dp"
                            android:textSize="@dimen/HEADINGS_FONT_SIZE"
                            android:textColor="@color/PARAGRAPH_COLOR"
                            android:text="App Developing &amp; Programming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_marginBottom="1dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:text="Rousan Ali"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:visibility="gone"
                                android:src="@drawable/ic_info_white_48dp"
                                android:layout_width="20dp"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/h3"
                            android:fontFamily="sans-serif-condensed"
                            android:textStyle="bold"
                            android:layout_marginBottom="2dp"
                            android:textSize="@dimen/HEADINGS_FONT_SIZE"
                            android:textColor="@color/PARAGRAPH_COLOR"
                            android:text="Sristi Website Designing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_marginBottom="1dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:text="@string/debtanu_co"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:visibility="gone"
                                android:src="@drawable/ic_info_white_48dp"
                                android:layout_width="20dp"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="1dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:text="@string/rousan_desin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:visibility="gone"
                                android:src="@drawable/ic_info_white_48dp"
                                android:layout_width="20dp"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="1dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:text="@string/thripa_co"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:visibility="gone"
                                android:src="@drawable/ic_info_white_48dp"
                                android:layout_width="20dp"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/h2"
                            android:fontFamily="sans-serif-condensed"
                            android:textStyle="bold"
                            android:layout_marginBottom="2dp"
                            android:textSize="@dimen/HEADINGS_FONT_SIZE"
                            android:textColor="@color/PARAGRAPH_COLOR"
                            android:text="Co-Oridinator &amp; Volunteer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_marginBottom="1dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:text="@string/anurag_co"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:visibility="gone"
                                android:src="@drawable/ic_info_white_48dp"
                                android:layout_width="20dp"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="1dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:text="@string/ashish_co"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:visibility="gone"
                                android:src="@drawable/ic_info_white_48dp"
                                android:layout_width="20dp"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="1dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:text="@string/nishit_co"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:visibility="gone"
                                android:src="@drawable/ic_info_white_48dp"
                                android:layout_width="20dp"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="1dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:text="Sayan Dey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:visibility="gone"
                                android:src="@drawable/ic_info_white_48dp"
                                android:layout_width="20dp"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="1dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:text="Siddhant Gupta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:visibility="gone"
                                android:src="@drawable/ic_info_white_48dp"
                                android:layout_width="20dp"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="1dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginRight="10dp"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:text="Soumyadeep Sana"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:visibility="gone"
                                android:src="@drawable/ic_info_white_48dp"
                                android:layout_width="20dp"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:gravity="center"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/BUTTON_HEIGHT">

                <TextView
                    android:id="@+id/open_profiles_btn"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/btn_bg_1_state"
                    android:textColor="@color/PARAGRAPH_COLOR"
                    android:textSize="@dimen/SMALL_FONT_SIZE"
                    android:gravity="center"
                    android:text="Open Profiles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
