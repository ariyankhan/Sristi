                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </ScrollView>

                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:background="#11ffbc00"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"/>


                    <RelativeLayout
                        android:id="@+id/show_details_6"
                        android:background="#00000000"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginRight="40dp"
                            android:id="@+id/qustion_6"
                            android:typeface="serif"
                            android:textColor="@color/PARAGRAPH_COLOR"
                            android:textStyle="bold"
                            android:textSize="@dimen/HEADINGS_FONT_SIZE"
                            android:text="@string/faq_6_q"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:visibility="gone"
                            android:paddingLeft="10dp"
                            android:id="@+id/answer_panel_6"
                            android:paddingRight="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_below="@id/qustion_6"
                            android:layout_width="match_parent"
                            android:layout_height="90dp">

                            <ScrollView
                                android:scrollbars="none"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:typeface="serif"
                                    android:textColor="#f5f0f1"
                                    android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                    android:text="@string/faq_6_a"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </ScrollView>

                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:background="#11ffbc00"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"/>


                    <RelativeLayout
                        android:id="@+id/show_details_7"
                        android:background="#00000000"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginRight="40dp"
                            android:id="@+id/qustion_7"
                            android:typeface="serif"
                            android:textColor="@color/PARAGRAPH_COLOR"
                            android:textStyle="bold"
                            android:textSize="@dimen/HEADINGS_FONT_SIZE"
                            android:text="@string/faq_7_q"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:visibility="gone"
                            android:paddingLeft="10dp"
                            android:id="@+id/answer_panel_7"
                            android:paddingRight="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_below="@id/qustion_7"
                            android:layout_width="match_parent"
                            android:layout_height="100dp">

                           <ScrollView
                               android:scrollbars="none"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <TextView
                                   android:typeface="serif"
                                   android:textColor="#f5f0f1"
                                   android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                   android:text="@string/faq_7_a"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"/>

                           </ScrollView>

                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_marginBottom="5dp"
                        android:background="#11ffbc00"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"/>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/bottom_extra_panel"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:alpha="0.3"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:textColor="@color/PARAGRAPH_COLOR"
                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                android:text="For more FAQs, visit our site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/faqs_go_btn"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center"
                android:background="@drawable/btn_bg_1_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="21dp"
                    android:paddingRight="21dp"
                    android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                    android:textColor="@color/PARAGRAPH_COLOR"
                    android:text="GO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>








