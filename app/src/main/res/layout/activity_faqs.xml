                            android:layout_marginTop="7dp"
                            android:layout_below="@id/qustion_3"
                            android:layout_width="match_parent"
                            android:layout_height="180dp">

                            <ScrollView
                                android:scrollbars="none"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:typeface="serif"
                                    android:textColor="#f5f0f1"
                                    android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                    android:text="@string/faq_3_a"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </ScrollView>

                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:background="#11ffbc00"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"/>

                    <RelativeLayout
                        android:id="@+id/show_details_4"
                        android:background="#00000000"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginRight="40dp"
                            android:id="@+id/qustion_4"
                            android:typeface="serif"
                            android:textColor="@color/PARAGRAPH_COLOR"
                            android:textStyle="bold"
                            android:textSize="@dimen/HEADINGS_FONT_SIZE"
                            android:text="@string/faq_4_q"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:visibility="gone"
                            android:paddingLeft="10dp"
                            android:id="@+id/answer_panel_4"
                            android:paddingRight="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_below="@id/qustion_4"
                            android:layout_width="match_parent"
                            android:layout_height="200dp">

                            <ScrollView
                                android:scrollbars="none"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:typeface="serif"
                                    android:textColor="#f5f0f1"
