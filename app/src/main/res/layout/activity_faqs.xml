                            android:textColor="@color/PARAGRAPH_COLOR"
                            android:textStyle="bold"
                            android:textSize="@dimen/HEADINGS_FONT_SIZE"
                            android:text="@string/faq_5_q"
                            android:layout_width="wrap_content"
