<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1ebf7"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#f1ebf7">

        <TextView
            android:textColor="#5c7e95"
            android:fontFamily="sans-serif-condensed"
            android:textSize="17dp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="0dp"
            android:text="Send Your Feedback and Report Help:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:elevation="2dp"
            android:id="@+id/help_full_name_inp"
            android:layout_marginBottom="7dp"
            android:background="#fff"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:layout_marginTop="0dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/profile"
            android:textSize="15dp"
            android:textColor="#696969"
            android:hint="Full Name"
            android:textColorHint="#adadad"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:elevation="2dp"
            android:textColorHint="#adadad"
            android:layout_marginBottom="7dp"
            android:background="#fff"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:layout_marginTop="0dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/email2"
            android:textSize="15dp"
            android:textColor="#696969"
            android:hint="Email"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:elevation="2dp"
            android:textColorHint="#adadad"
            android:layout_marginBottom="7dp"
            android:background="#fff"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:layout_marginTop="0dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/telephone2"
            android:textSize="15dp"
            android:textColor="#696969"
            android:hint="Mobile"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:elevation="2dp"
            android:textColorHint="#adadad"
            android:layout_marginBottom="7dp"
            android:background="#fff"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:layout_marginTop="0dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/web"
            android:textSize="15dp"
            android:textColor="#696969"
            android:hint="Website"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:elevation="2dp"
            android:textColorHint="#adadad"
            android:layout_marginBottom="7dp"
            android:background="#fff"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left"
            android:layout_marginTop="0dp"
            android:drawablePadding="10dp"
            android:textSize="15dp"
            android:textColor="#696969"
            android:hint="Messages"
            android:padding="7dp"
            android:lines="10"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:onClick="onHelpSend"
                android:textStyle="bold"
                android:elevation="40dp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:text="Send"
                android:padding="10dp"
                android:drawablePadding="1dp"
                android:background="#ff2c8aaa"
                android:drawableLeft="@drawable/send2"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>



</ScrollView>













