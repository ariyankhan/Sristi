<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_bk_1"
    tools:context="org.sristi.sristi.AppLoadingActivity">


    <RelativeLayout
        android:background="#000"
        android:alpha="0.7"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/loading_icon_root"
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginBottom="10dp"
                android:id="@+id/loader_app_icon"
                android:layout_centerHorizontal="true"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <LinearLayout
                android:gravity="center_horizontal"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_below="@id/loader_app_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/PARAGRAPH_COLOR"
                    android:textSize="@dimen/HEADINGS_FONT_SIZE"
                    android:text="SRISTI"
                    android:id="@+id/loader_first_txt_ani"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/PARAGRAPH_COLOR"
                    android:textStyle="bold"
                    android:textSize="@dimen/HEADINGS_FONT_SIZE"
                    android:text="2K16"
                    android:id="@+id/loader_second_txt_ani"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <WebView
            android:layout_marginTop="40dp"
            android:layout_below="@id/loading_icon_root"
            android:id="@+id/loading_ani_wv"
            android:layout_width="match_parent"
            android:layout_height="100dp"> </WebView>

        <TextView
            android:visibility="gone"
            android:id="@+id/app_loading_copyright_text_view"
            android:layout_marginBottom="9dp"
            android:textColor="#fff"
            android:textSize="@dimen/SMALL_FONT_SIZE"
            android:text="@string/COPYRIGHT_TEXT"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>













