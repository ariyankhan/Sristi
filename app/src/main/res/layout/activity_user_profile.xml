<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    tools:context="org.sristi.sristi.UserProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:src="@drawable/blank_profile"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:alpha="0.5"
                android:background="@color/THEME_COLOR_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:padding="20dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/top_name_title"
                        android:padding="2dp"
                        android:textSize="@dimen/HEADINGS_FONT_SIZE"
                        android:textStyle="bold"
                        android:textColor="@color/PARAGRAPH_COLOR"
                        android:text="Ariyan Khan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/top_short_note"
                        android:padding="2dp"
                        android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                        android:textStyle="bold"
                        android:textColor="@color/PARAGRAPH_COLOR"
                        android:text="Student, 3rd Year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/sign_up_btn"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/action_bar_icon_state"
                        android:padding="5dp"
                        android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                        android:textStyle="bold"
                        android:textColor="@color/PARAGRAPH_COLOR"
                        android:text="Sign Up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/theme_bk_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <View
                android:background="#000"
                android:alpha="0.4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/control_panel"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

               <ScrollView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <LinearLayout
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <LinearLayout
                               android:padding="15dp"
                               android:orientation="vertical"
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:id="@+id/name_title"
                                   android:padding="2dp"
                                   android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                   android:textStyle="bold"
                                   android:textColor="#fff"
                                   android:text="Full Name"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" />

                               <TextView
                                   android:id="@+id/name_short_note"
                                   android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                   android:paddingLeft="2dp"
                                   android:textStyle="bold"
                                   android:textColor="#f4f4f4"
                                   android:text="Ariyan Khan"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" />

                           </LinearLayout>

                           <LinearLayout
                               android:gravity="center"
                               android:paddingRight="15dp"
                               android:layout_gravity="center_vertical"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent">

                               <TextView
                                   android:visibility="gone"
                                   android:clickable="true"
                                   android:focusable="true"
                                   android:id="@+id/name_change_btn"
                                   android:background="@drawable/action_bar_icon_state"
                                   android:textSize="16sp"
                                   android:textColor="@color/HEADINGS_COLOR"
                                   android:padding="5dp"
                                   android:text="Change"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" />

                               <LinearLayout
                                   android:id="@+id/name_change_btn_panel2"
                                   android:clickable="true"
                                   android:focusable="true"
                                   android:background="@drawable/action_bar_icon_state"
                                   android:padding="10dp"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content">

                                   <ImageView
                                       android:src="@drawable/ab_icon_edit"
                                       android:layout_width="wrap_content"
                                       android:layout_height="20dp" />

                               </LinearLayout>

                           </LinearLayout>

                       </LinearLayout>

                       <View
                           android:background="@drawable/peofile_separator"
                           android:layout_width="match_parent"
                           android:layout_height="0.1dp"/>

                       <LinearLayout
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <LinearLayout
                               android:padding="15dp"
                               android:orientation="vertical"
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:id="@+id/email_title"
                                   android:padding="2dp"
                                   android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                   android:textStyle="bold"
                                   android:textColor="#fff"
                                   android:text="Email"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" />

                               <TextView
                                   android:id="@+id/email_short_note"
                                   android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                   android:paddingLeft="2dp"
                                   android:textStyle="bold"
                                   android:textColor="#f4f4f4"
                                   android:text="ariyankhan46@gmail.com"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" />

                           </LinearLayout>

                           <LinearLayout
                               android:gravity="center"
                               android:paddingRight="15dp"
                               android:layout_gravity="center_vertical"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent">

                               <TextView
                                   android:visibility="gone"
                                   android:clickable="true"
                                   android:focusable="true"
                                   android:id="@+id/email_change_btn"
                                   android:background="@drawable/action_bar_icon_state"
                                   android:textSize="16sp"
                                   android:textColor="@color/HEADINGS_COLOR"
                                   android:padding="5dp"
                                   android:text="Change"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" />

                               <LinearLayout
                                   android:visibility="gone"
                                   android:id="@+id/email_change_btn_panel2"
                                   android:clickable="true"
                                   android:focusable="true"
                                   android:background="@drawable/action_bar_icon_state"
                                   android:padding="10dp"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content">

                                   <ImageView
                                       android:src="@drawable/ab_icon_edit"
                                       android:layout_width="wrap_content"
                                       android:layout_height="20dp" />

                               </LinearLayout>

                           </LinearLayout>

                       </LinearLayout>

                       <View
                           android:background="@drawable/peofile_separator"
                           android:layout_width="match_parent"
                           android:layout_height="0.1dp"/>

                       <LinearLayout
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <LinearLayout
                               android:padding="15dp"
                               android:orientation="vertical"
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:id="@+id/password_title"
                                   android:padding="2dp"
                                   android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                   android:textStyle="bold"
                                   android:textColor="#fff"
                                   android:text="Password"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" />

                               <TextView
                                   android:id="@+id/password_short_note"
                                   android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                   android:textStyle="bold"
                                   android:paddingLeft="2dp"
                                   android:textColor="#f4f4f4"
                                   android:text="*************"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" />

                           </LinearLayout>

                           <LinearLayout
                               android:gravity="center"
                               android:paddingRight="15dp"
                               android:layout_gravity="center_vertical"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent">

                               <TextView
                                   android:visibility="gone"
                                   android:clickable="true"
                                   android:focusable="true"
                                   android:id="@+id/password_change_btn"
                                   android:background="@drawable/action_bar_icon_state"
                                   android:textSize="16sp"
                                   android:textColor="@color/HEADINGS_COLOR"
                                   android:padding="5dp"
                                   android:text="Change"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" />

                               <LinearLayout
                                   android:id="@+id/password_change_btn_panel2"
                                   android:clickable="true"
                                   android:focusable="true"
                                   android:background="@drawable/action_bar_icon_state"
                                   android:padding="10dp"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content">

                                   <ImageView
                                       android:src="@drawable/ab_icon_edit"
                                       android:layout_width="wrap_content"
                                       android:layout_height="20dp" />

                               </LinearLayout>

                           </LinearLayout>

                       </LinearLayout>

                       <View
                           android:background="@drawable/peofile_separator"
                           android:layout_width="match_parent"
                           android:layout_height="0.1dp"/>

                       <LinearLayout
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <LinearLayout
                               android:padding="15dp"
                               android:orientation="vertical"
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:id="@+id/college_name_title"
                                   android:padding="2dp"
                                   android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                   android:textStyle="bold"
                                   android:textColor="#fff"
                                   android:text="College Name"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" />

                               <TextView
                                   android:id="@+id/college_name_short_note"
                                   android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                   android:textStyle="bold"
                                   android:textColor="#f4f4f4"
                                   android:paddingLeft="2dp"
                                   android:text="Jalpaiguri Government Engineering College"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" />

                           </LinearLayout>

                           <LinearLayout
                               android:gravity="center"
                               android:paddingRight="15dp"
                               android:layout_gravity="center_vertical"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent">

                               <TextView
                                   android:visibility="gone"
                                   android:clickable="true"
                                   android:focusable="true"
                                   android:id="@+id/college_name_change_btn"
                                   android:background="@drawable/action_bar_icon_state"
                                   android:textSize="16sp"
                                   android:textColor="@color/HEADINGS_COLOR"
                                   android:padding="5dp"
                                   android:text="Change"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" />

                               <LinearLayout
                                   android:id="@+id/college_name_change_btn_panel2"
                                   android:clickable="true"
                                   android:focusable="true"
                                   android:background="@drawable/action_bar_icon_state"
                                   android:padding="10dp"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content">

                                   <ImageView
                                       android:src="@drawable/ab_icon_edit"
                                       android:layout_width="wrap_content"
                                       android:layout_height="20dp" />

                               </LinearLayout>

                           </LinearLayout>

                       </LinearLayout>

                       <View
                           android:background="@drawable/peofile_separator"
                           android:layout_width="match_parent"
                           android:layout_height="0.1dp"/>

                       <LinearLayout
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <LinearLayout
                               android:padding="15dp"
                               android:orientation="vertical"
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content">

                               <TextView
                                   android:id="@+id/year_title"
                                   android:padding="2dp"
                                   android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                   android:textStyle="bold"
                                   android:textColor="#fff"
                                   android:text="Year"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" />

                               <TextView
                                   android:id="@+id/year_short_note"
                                   android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                   android:paddingLeft="2dp"
                                   android:textStyle="bold"
                                   android:textColor="#f4f4f4"
                                   android:text="3rd Year"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" />

                           </LinearLayout>

                           <LinearLayout
                               android:gravity="center"
                               android:paddingRight="15dp"
                               android:layout_gravity="center_vertical"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent">

                               <TextView
                                   android:visibility="gone"
                                   android:clickable="true"
                                   android:focusable="true"
                                   android:id="@+id/year_change_btn"
                                   android:background="@drawable/action_bar_icon_state"
                                   android:textSize="16sp"
                                   android:textColor="@color/HEADINGS_COLOR"
                                   android:padding="5dp"
                                   android:text="Change"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" />

                               <LinearLayout
                                   android:id="@+id/year_change_btn_panel2"
                                   android:clickable="true"
                                   android:focusable="true"
                                   android:background="@drawable/action_bar_icon_state"
                                   android:padding="10dp"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content">

                                   <ImageView
                                       android:src="@drawable/ab_icon_edit"
                                       android:layout_width="wrap_content"
                                       android:layout_height="20dp" />

                               </LinearLayout>

                           </LinearLayout>

                       </LinearLayout>

                   </LinearLayout>

               </ScrollView>

            </LinearLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/edit_panel"
                android:background="@drawable/theme_bk_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:background="#000"
                    android:alpha="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:padding="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:maxLines="1"
                            android:scrollHorizontally="true"
                            android:id="@+id/edit_input"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:textCursorDrawable="@null"
                            android:lines="1"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="#fff"
                            android:background="#33000000"
                            android:textSize="@dimen/SMALL_FONT_SIZE"
                            android:hint="Name"
                            android:textColorHint="#ffbfbfd4"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />

                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="45dp">

                            <LinearLayout
                                android:background="@drawable/btn_bg_1_pressed"
                                android:layout_marginRight="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_height="match_parent">

                                <TextView
                                    android:gravity="center"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:id="@+id/action_button"
                                    android:fontFamily="sans-serif"
                                    android:paddingRight="15dp"
                                    android:paddingLeft="15dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:textSize="@dimen/SMALL_FONT_SIZE"
                                    android:background="@drawable/btn_bg_1_state"
                                    android:textColor="@color/PARAGRAPH_COLOR"
                                    android:text="Change"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <LinearLayout
                                    android:id="@+id/pb_holder_panel"
                                    android:visibility="gone"
                                    android:gravity="center"
                                    android:paddingTop="2dp"
                                    android:paddingBottom="2dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ProgressBar
                                        android:id="@+id/pb"
                                        android:max="100"
                                        android:progress="50"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent">

                                <TextView
                                    android:gravity="center"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:id="@+id/cancel_button"
                                    android:fontFamily="sans-serif"
                                    android:paddingRight="15dp"
                                    android:paddingLeft="15dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:textSize="@dimen/SMALL_FONT_SIZE"
                                    android:textColor="#fff"
                                    android:background="@drawable/btn_bg_1_state"
                                    android:text="Cancel"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>


















