<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    android:layout_height="match_parent">

    <View
        android:clickable="true"
        android:focusable="true"
        android:background="#000"
        android:alpha="0.6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/top_title_dialog"
                android:textColor="@color/PARAGRAPH_COLOR"
                android:text="Events under Management"
                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:background="@color/PARAGRAPH_COLOR"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/op2"
                                android:layout_width="23dp"
                                android:layout_height="23dp" />

                            <TextView
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:gravity="center"
                                android:text="AFS 1.0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/afs_btn"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/action_bar_icon_state"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/OTHERS_ONE_COLOR"
                            android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                            android:gravity="center"
                            android:text="View"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/op2"
                                android:layout_width="23dp"
                                android:layout_height="23dp" />

                            <TextView
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:gravity="center"
                                android:text="Devil's Advocate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/devil_advocate_btn"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/action_bar_icon_state"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/OTHERS_ONE_COLOR"
                            android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                            android:gravity="center"
                            android:text="View"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/op2"
                                android:layout_width="23dp"
                                android:layout_height="23dp" />

                            <TextView
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:gravity="center"
                                android:text="Incognito"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/incognito_btn"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/action_bar_icon_state"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/OTHERS_ONE_COLOR"
                            android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                            android:gravity="center"
                            android:text="View"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/op2"
                                android:layout_width="23dp"
                                android:layout_height="23dp" />

                            <TextView
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:gravity="center"
                                android:text="Picture Perception"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/piccture_perception_btn"
                            android:background="@drawable/action_bar_icon_state"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/OTHERS_ONE_COLOR"
                            android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                            android:gravity="center"
                            android:text="View"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/dialog_okay_btn"
                android:gravity="center"
                android:background="@drawable/btn_bg_1_state"
                android:textColor="@color/PARAGRAPH_COLOR"
                android:text="Okay"
                android:textSize="@dimen/SMALL_FONT_SIZE"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>












