<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:background="@drawable/theme_bk_1"
    android:layout_height="match_parent"
    tools:context="org.sristi.sristi.AboutUsActivity">

    <View
        android:background="#000"
        android:alpha="0.4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="#55000000"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:background="@drawable/round_theme"
                            android:layout_marginBottom="10dp"
                            android:padding="20dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/app_icon_2"
                                android:layout_width="35dp"
                                android:layout_height="35dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/about_title"
                            android:fontFamily="sans-serif-condensed"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            android:text="SRISTI 2K16"
                            android:textSize="@dimen/HEADINGS_FONT_SIZE"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/PARAGRAPH_COLOR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/PARAGRAPH_COLOR"
                            android:text="Largest Tech Fest Of North Bengal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </RelativeLayout>
                
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3">

            
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/settings_panel_bg_state"
                        android:id="@+id/rating_panel"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        
                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/rating"
                            android:layout_gravity="center"
                            android:layout_width="32dp"
                            android:layout_height="32dp" />

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginBottom="2dp"
                                android:text="Rate Us On Google Play"
                                android:textSize="@dimen/HEADINGS_FONT_SIZE"
                                android:textStyle="bold"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Show your interest in us"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        
                    </LinearLayout>

                    <View
                        android:background="@drawable/peofile_separator"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"/>

                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/settings_panel_bg_state"
                        android:id="@+id/facebook_panel"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/facebook_circle64"
                            android:layout_gravity="center"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginBottom="2dp"
                                android:text="Like Us On Facebook"
                                android:textSize="@dimen/HEADINGS_FONT_SIZE"
                                android:textStyle="bold"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Support us through social media"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:background="@drawable/peofile_separator"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"/>

                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/settings_panel_bg_state"
                        android:id="@+id/twitter_panel"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/twitter_circle_64"
                            android:layout_gravity="center"
                            android:layout_width="32dp"
                            android:layout_height="32dp" />

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginBottom="2dp"
                                android:text="Follow on Twitter"
                                android:textSize="@dimen/HEADINGS_FONT_SIZE"
                                android:textStyle="bold"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="We will give you lot of inspiration"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:background="@drawable/peofile_separator"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"/>

                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/settings_panel_bg_state"
                        android:id="@+id/instagram_panel"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/instagram"
                            android:layout_gravity="center"
                            android:layout_width="32dp"
                            android:layout_height="32dp" />

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginBottom="2dp"
                                android:text="Follow us on Instagram"
                                android:textSize="@dimen/HEADINGS_FONT_SIZE"
                                android:textStyle="bold"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Share your creations via Instagram"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:background="@drawable/peofile_separator"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"/>

                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/settings_panel_bg_state"
                        android:id="@+id/legal_panel"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/legal64"
                            android:layout_gravity="center"
                            android:layout_width="32dp"
                            android:layout_height="32dp" />

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginBottom="2dp"
                                android:text="Legal"
                                android:textSize="@dimen/HEADINGS_FONT_SIZE"
                                android:textStyle="bold"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Our terms and condition"
                                android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
                                android:textColor="@color/PARAGRAPH_COLOR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>
                    
                </LinearLayout>
                
            </ScrollView>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000">

        <ImageView
            android:id="@+id/back_imageeview"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_arrow_back_white_48dp"
            android:layout_width="26dp"
            android:layout_height="26dp" />

        <TextView
            android:visibility="gone"
            android:textColor="@color/PARAGRAPH_COLOR"
            android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
            android:padding="5dp"
            android:gravity="center"
            android:text="Sign In/Sign Up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>















