<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    android:layout_height="match_parent">

    <View
        android:clickable="true"
        android:focusable="true"
        android:background="#000"
        android:alpha="0.6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:padding="13dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pic_imageview"
            android:src="@drawable/ic_portable_wifi_off_white_48dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:gravity="center"
            android:id="@+id/title"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/HEADINGS_FONT_SIZE"
            android:textColor="@color/HEADINGS_COLOR"
            android:textStyle="bold"
            android:text="Workshop Started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:id="@+id/short_note"
            android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
            android:textColor="@color/PARAGRAPH_COLOR"
            android:textStyle="bold"
            android:text="Workshop will be start at 02PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:id="@+id/short_note2"
            android:textSize="@dimen/PARAGRAPH_FONT_SIZE"
            android:textColor="@color/PARAGRAPH_COLOR"
            android:textStyle="bold"
            android:text="Dispatched on 2PM, 2th March, 2016"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/exploe_btn"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:text="Explore"
                android:textColor="@color/PARAGRAPH_COLOR"
                android:textSize="@dimen/SMALL_FONT_SIZE"
                android:layout_width="0dp"
                android:background="@drawable/btn_bg_1_state"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/cancel_btn"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/PARAGRAPH_COLOR"
                android:textSize="@dimen/SMALL_FONT_SIZE"
                android:layout_width="0dp"
                android:background="@drawable/btn_bg_1_state"
                android:layout_weight="1"
                android:layout_height="match_parent" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>












